<% include ./partials/header%>
<div id="portfolioBody">
	<div id="portfolioHeader" class="headerSection shadow content font-2 inView" data-type="background" data-speed="10">
		<h1>Whatupp</h1>
	</div>
	<div class="container">
    <div class="row">
      <div class="col-xs-12 panel centered">
        <form class="form-horizontal tm-s bm-xs" action="/blog/<%=blog._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="control-label col-sm-2">Title</label>
                <div class="col-sm-10">
                  <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Image</label>
                <div class="col-sm-10">
                  <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Blog content</label>
                <div class="col-sm-10">
                  <textarea class="form-control" name="blog[body]"><%=blog.body%></textarea>
                </div>
            </div>


            <input class="btn btn-lg btn-success" type="submit">
        </form>
      </div>
    </div>

</div>
</div>
<% include ./partials/footer%>
